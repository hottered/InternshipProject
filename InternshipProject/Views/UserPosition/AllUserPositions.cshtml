@model IEnumerable<DataLayer.Models.Position.UserPosition>

@{
    ViewData["Title"] = "AllUserPositions";
}

<h1>Positions</h1>

<p>
    <a asp-controller="UserPosition" asp-action="CreateUserPosition">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Caption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Caption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateUserPosition", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteUserPosition", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
